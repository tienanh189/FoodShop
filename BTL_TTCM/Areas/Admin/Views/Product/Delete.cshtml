@model BTL_TTCM.Models.Product
@{
    ViewData["Title"] = "Product";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <h2>Are you want to delete this product?</h2>
    
            <table class="table table-border ">
                <thead>
                     <tr>
                       <th>ProductID</th>
                       <th>@Model.ProductId</th>
                     <tr/>
                     <tr>
                       <th>ProductName</th>
                       <th>@Model.ProductName</th>
                     <tr/>
                     <tr>
                       <th>CatID</th>
                       <th>@Model.CatId</th>
                     <tr/>
                     <tr>
                       <th>Descriptions</th>
                       <th>@Model.Descriptions</th>
                     <tr/>
                     <tr>
                       <th>Supplier</th>
                       <th>@Model.Supplier</th>
                     <tr/>
                     <tr>
                       <th>Producer</th>
                       <th>@Model.Producer</th>
                     <tr/>
                     <tr>
                       <th>Image</th>
                       <th>@Model.Image</th>
                     <tr/>                                                      
                </thead>
            </table>

             <div class="col-8 offset-3 row">

                        <div class="col-3">
                            <a href="@Url.ActionLink("DeleteConfirm","Product",new {id=@Model.ProductId})"><input type="submit" class="btn btn-info w-100" value="Delete"/></a>
                        </div>
                        <div class="col-3">
                             <a href="/admin/Product/Index" asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
           </div>    
       
    </main>
</div>
