@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<!-- register start here -->
<div class="register">
	<div class="container"> 
		<div class="row">
			<div class="col-md-6 col-sm-6 col-xs-12 box" style="margin:auto">
				<div class="commontop text-left">
					<h4>
						Sign in						
					</h4>
				</div>
			
				<form method="post" asp-action="login">
					<div class="form-group">	
						<label>Username *</label>
						<input type="text" name="username" value="" placeholder="UserName" id="input-username" class="form-control" required/>
					</div>
					<div class="form-group">
						<label>password *</label>
						<input type="password" name="password" value="" placeholder="Password" id="input-password" class="form-control" required/>
					</div>
					<div class="links">
						
					</div>
					<button type="submit" class="btn btn-primary" >SIGN IN</button>
				</form>

			</div>
				
		</div>
	</div>
</div>
<!-- register end here -->
